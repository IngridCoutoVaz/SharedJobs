<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preencha os dados"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/nomeCompletoEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nome completo"
            android:padding="5dp"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/emailEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:padding="5dp"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/telefoneRg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefone"
            android:padding="5dp"
            android:layout_margin="5dp"/>
            <RadioGroup
                android:id="@+id/telSelecionadoRg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:layout_margin="5dp">
                <RadioButton
                    android:id="@+id/comercialRb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comercial"
                    android:layout_weight="1"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/residencialRb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Residencial"
                    android:layout_weight="1"
                    android:checked="false"/>
            </RadioGroup>

        <CheckBox
            android:id="@+id/celularCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkCelular"
            android:text="Adicionar telefone celular?" />
            <EditText
                android:id="@+id/celularEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Celular"
                android:visibility="gone"
                android:padding="5dp"
                android:layout_margin="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sexo"
            android:padding="5dp"
            android:layout_margin="5dp"/>
        <RadioGroup
            android:id="@+id/sexoRg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:layout_margin="5dp">
            <RadioButton
                android:id="@+id/masculinoRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masculino"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/femininoRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feminino"
                android:checked="false"/>
        </RadioGroup>


        <EditText
            android:id="@+id/dateEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:hint="Data de Nascimento"
            android:padding="5dp"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formação"
            android:padding="5dp"
            android:layout_margin="5dp"/>

        <Spinner
            android:id="@+id/formacaoSp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/formacao"
            android:padding="5dp"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:id="@+id/campusLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="5dp">

            <EditText
                android:id="@+id/anoFormaturaEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:hint="Ano de formatura"
                android:visibility="gone"
                android:padding="5dp"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/anoConclusaoEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:hint="Ano de conclusão"
                android:visibility="gone"
                android:padding="5dp"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/instituiçãoEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Instituição de ensino"
                android:visibility="gone"
                android:padding="5dp"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/conclusãoGraduacaoEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:hint="Ano de conclusão de graduação"
                android:visibility="gone"
                android:padding="5dp"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/instituiçãoEnsinoEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:hint="Instituição de ensino"
                android:visibility="gone"
                android:padding="5dp"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/tituloEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:hint="Título de monagrafia"
                android:visibility="gone"
                android:padding="5dp"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/orientadorEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:hint="Nome do orientador"
                android:visibility="gone"
                android:padding="5dp"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/vagasEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Vagas de interesse"
            android:padding="5dp"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/salvarBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="onClickButton"
            android:padding="5dp"
            android:text="Salvar" />
        <Button
            android:id="@+id/limparBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="onClickButton"
            android:padding="5dp"
            android:text="Limpar" />

    </LinearLayout>
</ScrollView>
